@model IEnumerable<BusRequest>
@{
    Layout = "~/Views/Shared/_PageLayout.cshtml";
    ViewBag._Title = string.Format("ใบจองรถ | {0}", Application.Name);
    ViewBag._MainMenu = "ใบจองรถ";
    ViewBag._PageTitle = "ใบจองรถ";
    ViewBag._UserType = Current.User.UserType;
}
@section PagePluginStyle {
    <link href="~/assets/app/lib/zozo.tabs/css/zozo.tabs.min.css" rel="stylesheet">
    <link href="~/assets/app/lib/zozo.tabs/css/zozo.tabs.flat.min.css" rel="stylesheet">
}
<!-- BEGIN PAGE CONTAINER -->
<div class="page-container">
    <!-- BEGIN PAGE HEAD -->
    <div class="page-head">
        <div class="container">
            <!-- BEGIN PAGE TITLE -->
            <div class="page-title">
                <h1>@ViewBag._PageTitle</h1>
            </div>
            <!-- END PAGE TITLE -->
        </div>
    </div>
    <!-- END PAGE HEAD -->
    <div id="page-alert">
        <div class="container">
            <div class="alert alert-success alert-dismissable" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
                <i class="fa fa-check-circle fa-xlg"></i>
                <span class="sr-only">Error:</span>
                Enter a valid email address
            </div>
        </div>
    </div>
    <div id="page-toolbar">
        <div class="container">
            <div class="page-toolbar-actions">
                <div class="btn-group">
                    <a class="btn btn-default s-btn" role="button" href="#">
                        <i class="fa fa-plus"></i> เพิ่มใบจองรถ
                    </a>
                </div>
            </div>
            <div class="page-toolbar-actions pull-right">
                <div class="btn-group">
                    <button class="btn btn-default s-btn" href="javascript:;" data-toggle="dropdown">
                        บันทึกเป็น Excel <i class="fa fa-angle-down "></i>
                    </button>
                    <ul class="dropdown-menu pull-right">
                        <li>
                            <a href="javascript:;">
                                <i class="fa fa-pencil"></i> Edit
                            </a>
                        </li>
                        <li>
                            <a href="javascript:;">
                                <i class="fa fa-trash-o"></i> Delete
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <ul id="tabs" class="nav nav-tabs page-toolbar" data-tabs="tabs">
                <li class="active"><a href="#red" data-toggle="tab">ทั้งหมด</a></li>
                <li><a href="#orange" data-toggle="tab">รอตรวจสอบ (5)</a></li>
                <li><a href="#yellow" data-toggle="tab">ตรวจแล้ว (6)</a></li>
                <li><a href="#green" data-toggle="tab">เช่ารถแล้ว (1)</a></li>
            </ul>
        </div>
    </div>
    <!-- BEGIN PAGE CONTENT -->
    <div class="page-content bg-white">
        <div class="container">
            @{ Html.RenderPartial("_Table", Model); }
        </div>
    </div>
    <!-- END PAGE CONTENT -->
</div>
<!-- END PAGE CONTAINER -->
@section js
{
    <script src="~/assets/app/lib/zozo.tabs/js/zozo.tabs.min.js"></script>
    <script>
        jQuery(document).ready(function () {
            Metronic.init();
            Layout.init();

            //$("#tabbed-nav").zozoTabs({
